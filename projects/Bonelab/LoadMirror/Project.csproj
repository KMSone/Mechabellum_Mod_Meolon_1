      <Private>false</Private>
    </Reference>
    <Reference Include="Il2CppSLZ.Marrow">
      <HintPath>..\..\..\references\Bonelab_P$(Patch)_ML$(MelonLoader)\Il2CppSLZ.Marrow.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <ItemGroup Condition=" '$(MelonLoader)' == '5' ">
    <Reference Include="MelonLoader">
      <HintPath>..\..\..\references\ML$(MelonLoader)\MelonLoader.dll</HintPath>

      <HintPath>..\..\..\references\Bonelab_P$(Patch)_ML$(MelonLoader)\SLZ.Marrow.SDK.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent"
    Condition=" '$(OS)' == 'Windows_NT' and '$(CopyIntoGameAfterBuild)' == 'true' ">
    <Exec
      Command="COPY &quot;$(TargetPath)&quot; &quot;C:\Program Files\Oculus\Software\Software\stress-level-zero-inc-bonelab\Mods&quot;" />
  </Target>

</Project>